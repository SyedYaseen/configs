profile laptop {
    output eDP-1 enable
}

profile docked {
    output eDP-1 disable
    output HDMI-A-1 enable mode 3840x2160@60.0Hz position 0,0 scale 2.0
}

profile docked-2 {
    output eDP-1 disable
    output DP-3 enable mode 3840x2160@60.0Hz position 0,0 scale 2.0
}

profile dual {
    output eDP-1 enable position 0,0
    output HDMI-A-1 enable mode 3840x2160@60.0Hz position 1920,0 scale 2.0
}
